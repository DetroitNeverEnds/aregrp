COMPOSE_BAKE=true

DEBUG=True

ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ALLOWED_ORIGINS=http://localhost,http://127.0.0.1
CORS_ALLOW_ALL_ORIGINS=False
CSRF_TRUSTED_ORIGINS=http://localhost

DATABASE_URL=sqlite:///db.sqlite3  # postgres://<user>:<password>@<host>:<port>/<db>

DJANGO_SUPERUSER_USERNAME=<django_admin_user>
DJANGO_SUPERUSER_PASSWORD=<django_admin_password>
DJANGO_SUPERUSER_EMAIL=<email_admin>
DJANGO_SECRET_KEY=<django_secret>

# JWT Token Settings
ACCESS_TOKEN_LIFETIME_MINUTES=15
REFRESH_TOKEN_LIFETIME_DAYS=7
PASSWORD_RESET_TOKEN_LIFETIME_HOURS=24

# Email Settings
# В режиме DEBUG=True автоматически используется консольный бэкенд (письма выводятся в консоль)
# Для production (DEBUG=False) настройте SMTP:
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=<your_email@gmail.com>
EMAIL_HOST_PASSWORD=<your_email_password>
DEFAULT_FROM_EMAIL=<your_email@gmail.com>

# Frontend URL for password reset links
FRONTEND_URL=http://localhost:3000